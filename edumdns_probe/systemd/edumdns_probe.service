[Unit]
Description=EduMDNS Probe
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
ExecStart=/usr/local/sbin/edumdns_probe -f /var/local/edumdns/uuid -s edumdns-server.example.com --max-retries 30
Restart=always
RestartSec=5
User=root

[Install]
WantedBy=multi-user.target
